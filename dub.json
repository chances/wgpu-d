{
  "name": "wgpu-d",
	"description": "D bindings to wgpu-native",
	"authors": [
		"Chance Snow"
  ],
  "license": "MIT",
  "copyright": "Copyright Â© 2020-2023, Chance Snow",
  "subPackages": [
    "examples/headless",
    "examples/triangle",
    "examples/cube"
  ],
  "excludedSourceFiles": [
    "examples/triangle/subprojects/glfw/**/*.d"
  ],
  "targetType": "sourceLibrary",
  "targetPath": "bin",
  "toolchainRequirements": {
    "frontend": ">=2.105.0",
		"dmd": ">=2.105.0",
		"gdc": "no",
		"ldc": ">=1.35.0-beta1"
	},
  "systemDependencies-linux": "vulkan >= 1.1.0, patchelf",
  "systemDependencies-osx": "metal >= 2",
  "systemDependencies-windows": "DirectX >= 11",
  "preGenerateCommands-posix": [
    "make wgpu"
  ],
  "dflags": [
    "-P-Isource/wgpu",
    "-P-Isubprojects/wgpu"
  ],
  "configurations": [
    {
      "name": "library",
      "lflags-posix": [
        "-L$PACKAGE_DIR/lib"
      ]
    },
    {
      "name": "unittest",
      "lflags-posix": [
        "-Llib"
      ],
      "postBuildCommands-linux": [
        "echo Fixing up libwgpu so path...",
        "patchelf --set-rpath '$$ORIGIN' bin/wgpu-d-test-unittest"
      ],
      "postBuildCommands-osx": [
        "echo Fixing up libwgpu dylib path...",
        "install_name_tool -change /Users/runner/work/wgpu-native/wgpu-native/target/x86_64-apple-darwin/debug/deps/libwgpu_native.dylib @executable_path/libwgpu.dylib bin/wgpu-d-test-unittest"
      ]
    }
  ],
  "libs": [
    "wgpu_native"
  ],
  "copyFiles-linux": [
    "lib/libwgpu_native.so"
  ],
  "copyFiles-osx": [
    "lib/libwgpu_native.dylib"
  ]
}

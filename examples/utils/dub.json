  "targetType": "sourceLibrary",
  "targetPath": "../../bin",
  "dependencies": {
    "bindbc-glfw": "~>1.0.0",
    "gfm:math": "~>8.0",
    "wgpu-d": {
      "path": "../.."
    }
  },
  "versions": ["GLFW_32"],

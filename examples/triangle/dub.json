  "targetType": "executable",
  "targetPath": "../../bin",
  "dependencies": {
    "bindbc-glfw": "~>1.0.0",
    "imageformats": "~>7.0.2",
    "wgpu-d": {
      "path": "../.."
    }
  },
  "versions": ["GLFW_32"],
  "subConfigurations": {
    "bindbc-glfw": "static",

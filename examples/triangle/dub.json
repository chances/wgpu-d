  "lflags-posix": ["$PACKAGE_DIR/subprojects/glfw/src/libglfw3.a"],
  "lflags-windows": ["/LIBPATH:$PACKAGE_DIR/subprojects/glfw/src"],
  "libs-linux": ["X11"],
